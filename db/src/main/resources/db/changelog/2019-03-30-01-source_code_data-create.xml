<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="2019-03-30-01-source_code_data-create" author="msnake" dbms="postgresql">
        <createTable tableName="SOURCE_CODE_DATA">
            <column autoIncrement="true" name="ID" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="PK_SOURCE_CODE_DATA"/>
            </column>
            <column name="CODE_TEXT" type="CLOB">
                <constraints nullable="false"/>
            </column>
            <column name="MD5" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="SOURCE_CODE_DATA" cascadeConstraints="true"/>
        </rollback>
    </changeSet>

    <changeSet id="2019-03-30-01-source_code_data-create(create sequence SOURCE_CODE_DATA_SEQ)" author="msnake" dbms="postgresql">
        <createSequence sequenceName="SOURCE_CODE_DATA_SEQ"/>
    </changeSet>
</databaseChangeLog>
