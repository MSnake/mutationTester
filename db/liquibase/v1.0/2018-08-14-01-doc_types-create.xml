<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="2018-08-14-01-doc_types-create" author="asmirnov">
        <createTable tableName="DOC_TYPES">
            <column name="ID" type="VARCHAR(100)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_DOC_TYPES"/>
            </column>
            <column name="TYPE_NAME" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="DESCRIPTION" type="VARCHAR(1000)"/>
        </createTable>
        <insert tableName="DOC_TYPES">
            <column name="ID" value="APPTEMPLATE_DOCUMENT"/>
            <column name="TYPE_NAME" value="Документ"/>
        </insert>
        <insert tableName="DOC_TYPES">
            <column name="ID" value="APPTEMPLATE_REGISTER"/>
            <column name="TYPE_NAME" value="Регистрационная карточка"/>
        </insert>
        <insert tableName="DOC_TYPES">
            <column name="ID" value="VIRTUAL_GIS_LINKS"/>
            <column name="TYPE_NAME" value="Связи c ГИС"/>
            <column name="DESCRIPTION" value="Связи c ГИС (ключ - id документа)"/>
        </insert>

        <rollback>
            <dropTable tableName="DOC_TYPES" cascadeConstraints="true"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
